<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/dawn"
                android:dashWidth="2dp"
                android:dashGap="3dp"
                android:width="1dp"/>
        </shape>

        <padding android:top="@dimen/small_margin"
                 android:bottom="@dimen/smallest_margin" />
    </item>
</layer-list>